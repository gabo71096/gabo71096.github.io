---
import MTE from "@/components/demos/MTE";
import Footer from "@/components/Footer";
import GlassHeader from "@/components/GlassHeader";
import Layout from "@/layouts/Layout.astro";
---

<Layout
	className="min-h-screen font-sans antialiased selection:bg-purple-500/20 selection:text-purple-500"
	title="Mama, Te Entiendo",
	description="Ruby on Rails app focused on mental health"
>
	<div
		class="fixed inset-0 -z-10 h-full w-full bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(128,90,213,0.1),rgba(255,255,255,0))]"
	>
	</div>
	<GlassHeader client:only="react" />
	<main class="min-h-screen">
		<MTE client:only="react" />
	</main>
	<Footer client:only="react" />
</Layout>
